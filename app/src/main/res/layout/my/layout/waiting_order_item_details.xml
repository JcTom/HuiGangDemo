            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="订单详情"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginRight="25dp"
            />
    </LinearLayout>

