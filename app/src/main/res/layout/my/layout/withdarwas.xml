<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/withdarwas_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/return_128"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:text="@string/change_withdrawals"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="银  行  卡"
                style="@style/text_main"
                android:layout_gravity="left|center_vertical"
                android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="农业银行储蓄卡(4865)"
                style="@style/text_main"
                android:textColor="#878637">

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:gravity="left"
                style="@style/text_main"
                android:layout_gravity="left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="28sp"
                    android:textColor="@color/back"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/witharwals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/payment_mode"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/back"
                    android:background="#00000000">
                </EditText>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tips_font"
                    android:text="当前零钱余额"
                    android:layout_gravity="left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tips_font"
                    android:text="9.00"
                    android:layout_gravity="left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tips_font"
                    android:text="元，"
                    android:layout_gravity="left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部提现"
                    android:textSize="15sp"
                    android:textColor="#878637"
                    android:layout_gravity="left"/>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <Button
            android:id="@+id/btnwitharwals"
            style="@style/title_font"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/real_button_selector"
            android:text="提现" />


    </LinearLayout>




</LinearLayout>