<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/food_book_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="1dp"
            android:src="@mipmap/return_128" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="@string/cook_book"
            android:textColor="@color/top_title"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <!--菜所需材料-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_material"
                    style="@style/two_title" />

                <EditText
                    android:id="@+id/edt_makefood_matiria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/et_shape"
                    android:gravity="top"
                    android:hint="@string/food_material_edit"
                    android:minLines="3"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!--制作流程-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_making_process"
                    style="@style/two_title" />

                <EditText
                    android:id="@+id/edt_makefood_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/et_shape"
                    android:gravity="top"
                    android:hint="@string/food_making_process_edit"
                    android:minLines="3"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!--注意事项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_attention"
                    style="@style/two_title" />

                <EditText
                    android:id="@+id/edt_makefood_care"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/et_shape"
                    android:gravity="top"
                    android:hint="@string/food_attention_edit"
                    android:minLines="3"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>





    <!--发布-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_makefood_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:text="@string/release"
            style="@style/title_font" />
    </LinearLayout>


</LinearLayout>














