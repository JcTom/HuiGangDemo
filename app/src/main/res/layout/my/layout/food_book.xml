<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/food_book_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="1dp"
            android:src="@mipmap/return_128" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="@string/cook_book"
            android:textColor="@color/top_title"
            android:textSize="20sp" />

    </LinearLayout>

    <!--菜所需材料-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/food_material"
            android:textColor="@color/mid_title"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_makefood_matiria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/et_shape"
            android:gravity="top"
            android:hint="@string/food_material_edit"
            android:minLines="3"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <!--制作流程-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/food_making_process"
            android:textColor="@color/mid_title"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_makefood_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/et_shape"
            android:gravity="top"
            android:hint="@string/food_making_process_edit"
            android:minLines="3"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <!--注意事项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/food_attention"
            android:textColor="@color/mid_title"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_makefood_care"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/et_shape"
            android:gravity="top"
            android:hint="@string/food_attention_edit"
            android:minLines="3"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <!--发布-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_makefood_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/real_button_selector"
            android:text="@string/release"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>