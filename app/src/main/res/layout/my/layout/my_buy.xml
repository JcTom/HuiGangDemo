<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/buy_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/return_128"
            android:layout_marginLeft="1dp"
            android:layout_gravity="left|center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="我买到的"
            android:textSize="20sp"
            android:textColor="@color/top_title"
            android:gravity="center"
            android:layout_marginRight="25dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <!--all-->
            <LinearLayout
                android:id="@+id/ll_mybuy_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_mybuy_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="#FF9db830"
                    android:textSize="16dp" />
            </LinearLayout>
            <!--待接单-->
            <LinearLayout
                android:id="@+id/ll_mybuy_djd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_mybuy_djd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待接单"
                    android:textSize="16dp" />
            </LinearLayout>

            <!--待送餐-->
            <LinearLayout
                android:id="@+id/ll_mybuy_dsc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_mybuy_dsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待完成"
                    android:textSize="16dp" />
            </LinearLayout>

            <!--已完成-->
            <LinearLayout
                android:id="@+id/ll_mybuy_ywc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >
                <TextView
                    android:id="@+id/tv_mybuy_ywc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="16dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/myBuyViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>