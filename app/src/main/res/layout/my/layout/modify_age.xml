<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/return_128"
            android:layout_marginLeft="1dp"
            android:layout_gravity="left|center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="@string/modf_age"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginRight="25dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="@string/age" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_00"
                    android:textSize="18dp"
                    android:button="@drawable/radio"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_90"
                    android:textSize="18dp"
                    android:button="@drawable/radio"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_80"
                    android:textSize="18dp"
                    android:button="@drawable/radio"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_70"
                    android:textSize="17dp"
                    android:button="@drawable/radio"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_other"
                    android:textSize="18dp"
                    android:button="@drawable/radio"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    />


            </RadioGroup>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="чбошод"
                android:textSize="18dp"
                android:background="@drawable/real_button_selector"></Button>

        </LinearLayout>


    </LinearLayout>








</LinearLayout>