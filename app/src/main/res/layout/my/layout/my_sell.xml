<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/sell_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/return_128"
            android:layout_marginLeft="1dp"
            android:layout_gravity="left|center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="我卖出的"
            android:textSize="20sp"
            android:textColor="@color/top_title"
            android:gravity="center"
             android:layout_marginRight="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/linear_seller_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >
                <TextView
                    android:id="@+id/text_seller_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_sell_new"
                    android:textColor="#FF9db830"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_common_problem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/text_common_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_sell_old"
                    android:textSize="18dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>