<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <!--菜图片-->
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/second_ItemImage"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"
        />

    <!--设置菜的名字-->
    <TextView
        android:id="@+id/second_ItemTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:text="番茄炒鸡蛋"
        android:layout_toRightOf="@id/second_ItemImage"
        android:lines="1"
        android:ellipsize="end"
        android:maxEms="18"
        android:textColor="#000"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/second_ItemTitle"
        android:layout_below="@id/second_ItemTitle"
        android:layout_marginTop="5dp"
        >

        <!--设置菜的价格-->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="18sp"
            android:textColor="#ff0000"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350.00"
            android:textSize="18sp"
            android:textColor="#ff0000"
            android:layout_marginLeft="5dp"

            />

    </LinearLayout>


    <!--交易成功-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_toRightOf="@id/second_ItemImage"
           android:layout_alignBottom="@id/second_ItemImage"
           android:gravity="center"
           >

           <ImageView
               android:id="@+id/ok"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingRight="20dp"
               android:textSize="18sp"
               android:src="@mipmap/ok"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="交易成功"
               android:textColor="#000"
               android:textSize="12sp"
               android:layout_gravity="center"
               />

       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_ItemImage"
        android:orientation="vertical"
        >


        <!--分隔线-->
    <view
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="1dp"
        >

    </view>

        <!--查看评价的一栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!--数量-->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="数量*"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_gravity="center"
             android:layout_marginLeft="10dp"
             />

            <!--数字-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/textviewstyle_circular"
                android:text="查看评价"
                android:textSize="16sp" />

        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="1dp"
            >
        </view>
    </LinearLayout>





</RelativeLayout>