<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/recommend_ItemImage"
            android:src="@mipmap/ic_launcher"
            />

        <!--设置菜的名字-->
        <TextView
            android:id="@+id/recommend_ItemTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/recommend_ItemImage"
            android:lines="1"
            android:ellipsize="end"
            android:maxEms="18"
            />
        <!--设置菜的描述-->
        <TextView
            android:layout_toRightOf="@id/recommend_ItemImage"
            android:id="@+id/recommend_ItemText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/recommend_ItemTitle"
            android:textColor="#d3d3d3"
            android:text="0001"
            android:lines="2"
            android:ellipsize="end"
            android:maxEms="18"
            />
        <!--设置菜的价格-->
        <TextView
            android:id="@+id/recommend_ItemMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recommend_ItemImage"
            android:layout_alignLeft="@id/recommend_ItemTitle"
            android:text="¥"
            android:textSize="18sp"
            android:textColor="#ff0000"
            />
        <!--设置返回按钮,src已经在activity里面设置了-->

        <ImageView
            android:id="@+id/recommend_ItemReturn"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:src="@mipmap/add"
            android:layout_marginTop="60dp"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#F0F0F0"
            />
    </RelativeLayout>
</LinearLayout>