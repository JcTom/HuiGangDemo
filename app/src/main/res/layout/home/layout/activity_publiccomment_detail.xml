<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    //标题栏

    <LinearLayout
        android:id="@+id/ly_pcomment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9db830"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_BuyPcommend_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="1dp"
            android:src="@mipmap/return_128" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="察看评论"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.example.androidbase.widget.CircleImageView
                android:id="@+id/cir_cookCommend_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_cookCommend_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户名"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_cookCommend_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="我是内容"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colord2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_cookCommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="标题"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cookCommend_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="2017/08/09"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colord2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.example.androidbase.widget.CircleImageView
                android:id="@+id/cir_cusComment_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_CurComment_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户名"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_CurComment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="我是内容"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_CurComment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2017/04/28"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_pcomment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/set_btn_sign_up_bg"
        android:gravity="center"
        android:text="添加评价"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>