<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.androidbase.widget.CircleImageView
            android:id="@+id/recycleImv_comment_userHead"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@mipmap/default_image"
            app:border_width="1dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editor_one"
                android:text="某某用户"
                android:id="@+id/tv_comemnt_username"
                android:layout_marginTop="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tips_font"
                android:id="@+id/tv_comment_time"
                android:text="28分钟前"
                android:layout_marginTop="2dp"/>


        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@mipmap/delete_post"
            android:background="#00000000"
            android:id="@+id/imvb_comment_delete"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="的范德萨范德萨发的说的范德萨范德萨发的说法的范德萨范德萨发的说法的范德萨范德萨发的说法法"
        style="@style/text_main"
        android:id="@+id/tv_comment_content"
        android:lineSpacingMultiplier="1.1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"/>
</LinearLayout>