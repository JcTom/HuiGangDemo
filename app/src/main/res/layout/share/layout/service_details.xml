<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/login_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.example.androidbase.widget.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@mipmap/default_image"
                app:border_width="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pub_user"
                    style="@style/editor_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="某某小区用户" />

                <TextView
                    android:id="@+id/pub_time"
                    style="@style/tips_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="28分钟前" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:id="@+id/content"
                style="@style/text_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="需要打扫卫生，需要打扫卫生，需要鲨卷风蓝色礼服，撒反对是是" />


            <TextView
                android:id="@+id/service_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="¥50.00"
                android:textColor="@color/yellow"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_gray"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_main"
                    android:text="@string/lxr"/>

                <TextView
                    android:id="@+id/user_name"
                    style="@style/text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王阿姨" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_main"
                    android:text="@string/lxdh"/>

                <TextView
                    android:id="@+id/phone"
                    style="@style/text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="189424336xx" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_main"
                    android:text="@string/lxdz"/>

                <TextView
                    android:id="@+id/address"
                    style="@style/text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3栋508" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        style="@style/tab_title"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/help"
            style="@style/title_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/green"
            android:gravity="center"
            android:text="我要帮" />
    </LinearLayout>

</LinearLayout>