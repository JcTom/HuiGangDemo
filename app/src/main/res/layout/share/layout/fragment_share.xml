<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="18dp">

            <RadioGroup
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_jz"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_jz"
                    android:text="@string/share_jz" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_dg"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_dg"
                    android:text="@string/share_dg" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_sfc"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_sfc"
                    android:text="@string/share_sfc" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_dskd"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_kd"
                    android:text="@string/share_dskd" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <RadioGroup
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_jsxh"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_xh"
                    android:text="@string/jsxh" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_phlr"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_lrph"
                    android:text="@string/share_phlr" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_esjy"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_esjy"
                    android:text="@string/share_esjy" />

                <cn.bingoogolapple.badgeview.BGABadgeRadioButton
                    android:id="@+id/share_jqqd"
                    style="@style/share_style"
                    android:drawableTop="@mipmap/share_jqqd"
                    android:text="@string/share_jqqd" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <ImageView
            android:id="@+id/ad1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bj" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <ImageView
            android:id="@+id/ad2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_kitchen_bg" />
    </LinearLayout>

</LinearLayout>